<!DOCTYPE html>
<!--[if IE 8]>         <html class="ie8"> <![endif]-->
<!--[if IE 9]>         <html class="ie9 gt-ie8"> <![endif]-->
<!--[if gt IE 9]><!--> <html class="gt-ie8 gt-ie9 not-ie"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
    <title>
        {% if meta_title is defined %}
            {{ meta_title }} -
        {% endif %}
        {{ 'Simple Shop'|trans }}
    </title>
    <meta name="description" content="{{ meta_description|default('') }}" />
    <meta name="keywords"    content="{{ meta_keywords|default('')    }}" />

    <link rel="icon" type="image/ico" href="{{ asset('img/frontend/favicon.ico') }}" />

    {% block pace %}
        <link href="{{ grunt_asset('css/account_pace.css') }}" rel="stylesheet" media="all" />
        <script type="text/javascript" src="{{ grunt_asset('js/pace.js') }}"></script>
    {% endblock %}

    {% block javascripts_head %}
        <script type="text/javascript" src="{{ grunt_asset('js/account_head.js') }}"></script>
        <script>
            Raven.config('{{ public_sentry_dsn }}').install();
        </script>
    {% endblock %}

    {% block stylesheets %}
        <link href="{{ grunt_asset('css/account.css') }}" rel="stylesheet" media="all" />
    {% endblock %}
</head>
{% block body %}{% endblock %}
</html>