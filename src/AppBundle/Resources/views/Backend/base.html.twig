<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">

    <title>
        {% if meta_title is defined %}
            {{ meta_title }} -
        {% endif %}
        {{ 'Admin panel'|trans }}
    </title>
    <meta name="description" content="{{ meta_description|default('') }}" />
    <meta name="keywords"    content="{{ meta_keywords|default('') }}" />

    <link rel="icon" type="image/png" href="{{ asset('img/backend/favicon.ico') }}" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,600,700,300&subset=latin" rel="stylesheet" type="text/css">

    {% block stylesheets %}
        <link href="{{ grunt_asset('css/backend.css') }}" media="all" rel="stylesheet" />
    {% endblock %}

    {% block javascripts_head %}
        <script src="{{ grunt_asset('js/backend_head.js') }}"></script>
    {% endblock %}
</head>
{% block body %}{% endblock %}
</html>
