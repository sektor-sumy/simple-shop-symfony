{% extends 'AppBundle::Frontend/default.html.twig' %}
{% set title = 'Sign up'|trans %}
{% set meta_title = title %}

{% block content %}
<div class="container login">
    <h1 class="text-center">{{ 'Register page'|trans }}</h1>
        <div class="row">
            <div class="col-sm-offset-3 col-sm-6 col-lg-offset-4 col-lg-4 fadeInDownSmall animated">
                {% include "AppBundle::Frontend/Layout/flashbag.html.twig" %}
                <ul class="nav nav-tabs">
                    <li class="col-xs-6 text-center">
                        <a href="{{ url('frontend-user-login') }}">
                            {{ 'Sign in'|trans }}
                        </a>
                    </li>
                    <li class="active col-xs-6 text-center">
                        <a href="{{ url('frontend-user-register') }}" >
                            {{ 'Create account'|trans }}
                        </a>
                    </li>
                </ul>
                <div class="col-md-12 form-block">
                    {{ form_start(form) }}

                        <div class="form-group">
                            {{ form_widget(form.firstName) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.lastName) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.email) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.password) }}
                        </div>
                        <div class="form-group col-xs-6 row" style="clear: both">
                            {{
                                form_widget(form.submit, {
                                    'attr': {
                                        'class': 'btn-warning btn-block btn-sm'
                                    }
                                })
                            }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
